{% set assetHash = global.random() %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="love creating fast accessible websites.">
    <title>{{ title }}</title>
    <!-- synchronous css / inline css  -->
    <link rel="stylesheet" href="/assets/css/global.css?{{ assetHash }}"/>
    <!-- preloads -->
    <link
            rel="preload"
            href="/assets/fonts/MonaSans.woff2"
            as="font"
            type="font/woff2"
            crossorigin
    />
</head>
<body>
<main id="main" class="flow">{{ content | safe }}</main>
</body>
</html>